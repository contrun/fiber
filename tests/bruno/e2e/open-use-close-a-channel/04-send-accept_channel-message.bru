meta {
  name: accept a channel from a peer
  type: http
  seq: 4
}

post {
  url: {{NODE1_RPC_URL}}/ckb
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  Accept: application/json
}

body:json {
  {
    "request": {
      "AcceptChannel": [
        {
          "temp_channel_id": "{{TEMP_CHANNEL_ID}}",
          "funding_amount": 100000000000
        }
      ]
    }
  }
}

assert {
  res.status: eq 200
}

script:post-response {
  // Sleep for sometime to make sure current operation finishes before next request starts.
  // Give it 30 seconds for us to assemble valid inputs to the funding tx.
  // The assembly process requires a few rpc calls for both parties, each may require
  // a few seconds to finish.
  await new Promise(r => setTimeout(r, 30 * 1000));
}
